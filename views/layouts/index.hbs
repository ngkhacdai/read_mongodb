<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <button onclick="opendialogAdd()">Thêm mới</button>
        <dialog id="dialogAdd" class="w-25">
            <form action="/index" method="POST">
                <div class="row">
                    <input type="number" placeholder="albumID" name="albumID" />
                </div>
                <div class="row mt-1"><input type="text" placeholder="title" name="title" /></div>
                <div class="row mt-1"><input type="text" placeholder="url" name="url" /></div>
                <div class="row mt-1"><input type="text" placeholder="thumnailUrl" name="thumnailUrl" /></div>
                <div class="row mt-1 d-flex justify-content-center">
                    <a class="btn btn-primary col-3 me-1" href="/index" value="cancel">Hủy</a>
                    <button class="btn btn-primary col-6" type="submit">Thêm vào danh sách</button>
                </div>
            </form>
        </dialog>
        <dialog id="dialogUpdate" class="w-25">
            <form action="/index/update" method="POST">
                <div class="row">
                    <input type="text" placeholder="id" id="inputID" name="id" />
                </div>
                <div class="row">
                    <input type="number" placeholder="albumID" name="albumID" />
                </div>
                <div class="row mt-1"><input type="text" placeholder="title" name="title" /></div>
                <div class="row mt-1"><input type="text" placeholder="url" name="url" /></div>
                <div class="row mt-1"><input type="text" placeholder="thumnailUrl" name="thumnailUrl" /></div>
                <div class="row mt-1 d-flex justify-content-center">
                    <a class="btn btn-primary col-3 me-1" href="/index" value="cancel">Hủy</a>
                    <button class="btn btn-primary col-6" type="submit">Thêm vào danh sách</button>
                </div>
            </form>
        </dialog>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>albumID</th>
                    <th>title</th>
                    <th>url</th>
                    <th>thumnailUrl</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each baitap }}
                <tr>
                    <td>{{this._id}}</td>
                    <td>{{this.albumID}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.url}}</td>
                    <td>{{this.thumnailUrl}}</td>
                    <td>
                        <button onclick="opendialogUpdate(`{{this._id}}`)" class="btn btn-primary">Edit</button>
                    </td>
                    <td>
                        <button onclick="deleteDialog(`{{this._id}}`)" class="btn btn-primary">Delete</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

    </div>
    <script>
        const dialogAdd = document.getElementById('dialogAdd');
        const dialogUpdate = document.getElementById('dialogUpdate');
        const dialogdelete = document.getElementById('dialogdelete');
        const idInput = document.getElementById('inputID');
        const opendialogAdd = () => {
            dialogAdd.showModal();
        }
        const opendialogUpdate = () => {
            dialogUpdate.showModal();
        }
        const deleteDialog = (id) => {
            location.href = "http://localhost:3030/index/delete/" + id;
        }

    </script>
</body>

</html>